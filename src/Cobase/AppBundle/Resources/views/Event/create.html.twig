{% extends '::base.html.twig' %}

{% block content %}
    <h2 class="p3">
        <span class="color-1">Create</span> new event
    </h2>

    {% if gravatar == false %}
    <p>
        It seems like your profile does not include Gravatar account's email address. With <a target="BLANK" href="http://www.gravatar.com">Gravatar</a>, you can link an email with your
        profile image so that it is same across different services. If you enable your Gravatar email in your profile page, your events
        will have your Gravatar icon on the listings.
    </p>
    {% endif %}

    <form id="form" action="{{ path('CobaseAppBundle_event_create') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_widget(form) }}
        <div class="btns">
            <input class="button" type="submit" value="Submit">
        </div>
    </form>

{% endblock content %}

{% block sidenav %}
    <h2 class="p3"><span class="color-1">Show</span> me</h2>
    <ul class="list-1">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <li><a href="{{ path('CobaseAppBundle_highfives_received') }}">Latest for you</a></li>
        {% endif %}
        <li><a href="{{ path('CobaseAppBundle_all_events') }}">All events</a></li>
        <li><a href="{{ path('CobaseAppBundle_all_highFives') }}">All high fives</a></li>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <li><a href="{{ path('CobaseAppBundle_all_quickHighFives') }}">All quickies for you</a></li>
        {% endif %}
        <li><a href="{{ path('CobaseAppBundle_users') }}">All users</a></li>
    </ul>
    <br/>

    <h2 class="p3"><span class="color-1">Latest</span> events</h2>
    <p class="p5">
    {% for event in latestEvents %}
        <article class="event-small">
            <div class="data">
                <header>
                    <strong><a href="{{ path('CobaseAppBundle_event_view', { 'eventId': event.shortUrl }) }}">{{ event.title }}</a></strong><br/>
                    By {{ event.user.getName() }}
                </header>
            </div>
        </article>
    {% else %}
        <p class="p2"><strong>No events found...</strong></p>
    {% endfor %}
    </p>
{% endblock sidenav %}